<?xml version="1.0" encoding="utf-8"?>
<VisualStudioToolFile
	Name="Yasm"
	Version="8.00"
	>
	<Rules>
		<CustomBuildRule
			Name="YASM"
			DisplayName="Yasm Assembler"
			CommandLine="yasm -Xvc -f win32 [Defines] [UnDefines] [IncludePaths] -o $(IntDir)\$(InputName).obj [inputs]"
			Outputs="$(IntDir)\$(InputName).obj"
			FileExtensions="*.asm"
			ExecutionDescription="Assembling ..."
			ShowOnlyRuleProperties="false"
			>
			<Properties>
				<StringProperty
					Name="Defines"
					DisplayName="Preprocessor Definitions"
					Description="Preprocessor Definitions"
					Switch="-D[value]"
					Delimited="true"
					Inheritable="true"
				/>
				<StringProperty
					Name="IncludePaths"
					DisplayName="Include Paths"
					Switch="-i&quot;[value]\&quot;"
					Delimited="true"
					Inheritable="true"
				/>
				<StringProperty
					Name="UnDefines"
					DisplayName="Remove Preprocessor Definitions"
					Description="Undefine"
					Switch="-u[value]"
					Delimited="true"
					Inheritable="true"
				/>
			</Properties>
		</CustomBuildRule>
	</Rules>
</VisualStudioToolFile>
